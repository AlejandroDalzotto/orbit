{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "orbit",
  "version": "../package.json",
  "identifier": "com.orbit.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun build"
  },
  "app": {
    "windows": [
      {
        "title": "Orbit",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/Square30x30Logo.png",
      "icons/Square44x44Logo.ico",
      "icons/Square71x71Logo.ico",
      "icons/Square89x89Logo.ico",
      "icons/Square107x107Logo.ico",
      "icons/Square142x142Logo.ico",
      "icons/Square150x150Logo.ico",
      "icons/Square284x284Logo.ico",
      "icons/Square310x310Logo.ico",
      "icons/StoreLogo.png" 
    ]
  }
}